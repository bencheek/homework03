{
  "name": "homework03",
  "version": "1.0.0",
  "description": "NodeJS Nights Homework",
  "main": "app.js",
  "scripts": {
    "test": "npx mocha --opts ./tests/mocha.opts ./tests",
    "test:coverage:local": "npx nyc mocha --opts ./tests/mocha.opts ./tests",
    "test:coverage:report": "npx nyc report mocha --opts ./tests/mocha.opts ./tests --reporter=text-lcov > ./tests/coverage/coverage.lcov",
    "dev": "nodemon src/app.js | pino-pretty",
    "lint": "eslint .",
    "migrate:make": "knex migrate:make --knexfile ./database/knexfile.js",
    "db:migrate": "knex migrate:latest --knexfile ./database/knexfile.js",
    "db:rollback": "knex migrate:rollback --knexfile ./database/knexfile.js",
    "infra": "docker-compose up -d",
    "infra:stop": "docker-compose down"
  },
  "keywords": [
    "REST",
    "API",
    "CRUD"
  ],
  "author": "Martin Bencik",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.2",
    "crypto": "^1.0.1",
    "dotenv": "^6.1.0",
    "jsonschema": "^1.2.4",
    "jsonwebtoken": "^8.3.0",
    "kcors": "^2.2.2",
    "knex": "^0.15.2",
    "koa": "^2.5.3",
    "koa-body": "^4.0.4",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "objection": "^1.3.0",
    "pg": "^7.4.3",
    "pino": "^5.8.0",
    "ramda": "^0.25.0",
    "travis": "^0.1.1"
  },
  "devDependencies": {
    "@strv/eslint-config-javascript": "^8.3.0",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "eslint": "^5.7.0",
    "mocha": "^5.2.0",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.4",
    "pino-pretty": "^2.2.2",
    "sinon": "^7.1.1",
    "supertest-koa-agent": "^0.3.0"
  }
}
